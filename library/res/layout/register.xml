<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/common_list_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/common_sub_title"/>
    <RelativeLayout
            android:background="@drawable/bg_flight_arrive"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <EditText
                android:id="@+id/username"
                android:hint="用户名"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="text"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="@drawable/bg_flight_arrive"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <EditText
                android:inputType="textPassword"
                android:id="@+id/pwd"
                android:hint="密码"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="@drawable/bg_flight_arrive"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <EditText
                android:inputType="textPassword"
                android:id="@+id/pwdsure"
                android:hint="确认密码"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="@drawable/bg_flight_arrive"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <EditText
                android:id="@+id/mail"
                android:hint="邮箱地址"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textEmailAddress"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="@drawable/bg_flight_arrive"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:visibility="gone">
        <ImageView
                android:id="@+id/yzm"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>

        <EditText
                android:id="@+id/yzmtext"
                android:layout_alignParentLeft="true"
                android:hint="验证码"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_toLeftOf="@id/yzm"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="text"/>
    </RelativeLayout>

    <Button
            android:onClick="submitBtn"
            android:text="确认"
            android:textSize="@dimen/size17"
            android:textColor="@color/common_write"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/flight_query_button"
            android:layout_width="fill_parent"
            android:layout_height="60dp"/>
</LinearLayout>