<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6cace6">
    <LinearLayout
            android:id="@+id/btn_comment"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/web_view_bottom_button_padding"
            android:background="@drawable/bg_web_view_bottom_button"
            android:visibility="gone">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/icon_b_comment"
                android:scaleType="fitCenter"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/web_view_bottom_button_text_margin"
                android:textSize="@dimen/web_view_bottom_button_text_size"
                android:text="评论"
                android:gravity="center"
                android:textColor="#ffffff"/>
    </LinearLayout>
    <View android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#ffffff"/>
    <LinearLayout
            android:id="@+id/btn_collect"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/web_view_bottom_button_padding"
            android:background="@drawable/bg_web_view_bottom_button">
        <ImageView
                android:id="@+id/collect_image"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/icon_b_collect"
                android:scaleType="fitCenter"/>
        <TextView
                android:id="@+id/collect_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/web_view_bottom_button_text_margin"
                android:textSize="@dimen/web_view_bottom_button_text_size"
                android:text="收藏"
                android:gravity="center"
                android:textColor="#ffffff"/>
    </LinearLayout>
    <View android:layout_width="1dp"
          android:layout_height="fill_parent"
          android:background="#ffffff"/>
    <LinearLayout
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/web_view_bottom_button_padding"
            android:background="@drawable/bg_web_view_bottom_button">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/icon_b_share"
                android:scaleType="fitCenter"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/web_view_bottom_button_text_margin"
                android:textSize="@dimen/web_view_bottom_button_text_size"
                android:text="分享"
                android:gravity="center"
                android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>