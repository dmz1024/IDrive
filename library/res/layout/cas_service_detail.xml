<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <include layout="@layout/common_title"/>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <!--标题-->
                <TextView
                        android:gravity="center|top"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size5"
                        android:layout_marginRight="@dimen/size5"
                        android:layout_marginTop="@dimen/size25"
                        android:layout_marginBottom="@dimen/size5"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/title"
                        android:textColor="#000000"
                        android:textSize="@dimen/size15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <!--虚线-->
                <ImageView
                        android:background="@drawable/icon_xx"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>

                <!--来源和时间-->
                <LinearLayout
                        android:layout_marginTop="@dimen/size5"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:layout_marginRight="@dimen/size3"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent">
                        <TextView
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/source"
                                android:textColor="#878787"
                                android:textSize="@dimen/size14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent">
                        <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/time"
                                android:textColor="#878787"
                                android:textSize="@dimen/size14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <View android:layout_width="fill_parent" android:layout_height="@dimen/size10"/>
                <!--内容-->
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <include layout="@layout/loading_layout"/>
    </FrameLayout>
</LinearLayout>
