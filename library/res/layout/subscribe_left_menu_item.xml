<?xml version="1.0" encoding="utf-8"?>

<com.trs.view.checkable.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size48"
        android:background="@drawable/bg_subscribe_menu_item"
        android:gravity="center_vertical">
    <ImageView
            android:scaleType="centerCrop"
        android:id="@+id/img"
        android:layout_width="@dimen/size33" android:layout_height="@dimen/size33"
        android:layout_marginLeft="@dimen/size18"
        android:background="#7f000000"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/size15"
        android:textColor="#ffffff"/>

    <ImageView
            android:id="@+id/icon_goto"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/size12"
            android:src="@drawable/ic_subscribe_item_right"/>
    <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:padding="@dimen/size12"
            android:background="@null"
            android:src="@drawable/icon_unsubscribe"
            android:visibility="gone"/>
</com.trs.view.checkable.CheckableLinearLayout>
