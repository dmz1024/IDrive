<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#e9e9e9"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/title_layout"
            android:background="@drawable/bg_login_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size50">
        <ImageView
                android:onClick="BackBtnClick"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size10"
                android:background="@drawable/icon_jh_subscribe_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="设置"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:textSize="@dimen/size17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginRight="@dimen/size30"
                    android:layout_marginLeft="@dimen/size30"
                    android:background="@drawable/eee"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size150">
                <RelativeLayout
                        android:visibility="gone"
                        android:onClick="BtnSearch"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/searchImg"
                            android:background="@drawable/jh_setting_search"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/searchImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="全文检索"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/msgImg"
                            android:background="@drawable/setting_newscenter"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/msgImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="消息中心"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/appImg"
                            android:background="@drawable/setting_square"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/appImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="应用广场"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/collectionImg"
                            android:background="@drawable/setting_collection"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/collectionImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="我的收藏"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginRight="@dimen/size30"
                    android:layout_marginLeft="@dimen/size30"
                    android:background="@drawable/eee"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size100">
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/snsImg"
                            android:background="@drawable/setting_bind"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/snsImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="社交网络"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/apprecommendImg"
                            android:background="@drawable/setting_recom"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/apprecommendImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="应用推荐"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginRight="@dimen/size30"
                    android:layout_marginLeft="@dimen/size30"
                    android:background="@drawable/eee"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size200">
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/lightImg"
                            android:background="@drawable/jh_setting_search"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/lightImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="亮度"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/fontSizeImg"
                            android:background="@drawable/setting_newscenter"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/fontSizeImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="字体大小"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/clearcocahImg"
                            android:background="@drawable/setting_square"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/clearcocahImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="清空缓存"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/defaultLayoutImg"
                            android:background="@drawable/setting_collection"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/defaultLayoutImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="恢复默认布局"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginRight="@dimen/size30"
                    android:layout_marginLeft="@dimen/size30"
                    android:background="@drawable/eee"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size100">
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/updateImg"
                            android:background="@drawable/setting_bind"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/updateImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="检查更新"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_marginRight="0.5dp"
                            android:layout_marginLeft="0.5dp"
                            android:background="@drawable/jh_setting_split"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    <ImageView
                            android:id="@+id/feedbackImg"
                            android:background="@drawable/setting_opinion"
                            android:layout_marginLeft="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_toRightOf="@id/feedbackImg"
                            android:layout_marginLeft="@dimen/size10"
                            android:textColor="#000000"
                            android:textSize="@dimen/size15"
                            android:text="意见反馈"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size10"
                            android:background="@drawable/icon_new_home_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>