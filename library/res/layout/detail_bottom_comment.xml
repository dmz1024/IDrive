<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/function_layout_id"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:onClick="shareBottomLayoutClick"
            android:background="#e4e4e4"
            android:layout_alignParentBottom="true">

        <!--back-->
        <ImageView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/imgid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@null"/>

        <!--收藏-->
        <ImageView
                android:id="@+id/colimgid"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@null"/>
        <!--分享-->
        <ImageView
                android:id="@+id/shareimgid"
                android:layout_toLeftOf="@id/colimgid"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@null"/>

        <EditText
                android:hint="我要评论"
                android:layout_toRightOf="@id/imgid1"
                android:layout_toLeftOf="@id/shareimgid"
                android:layout_width="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="40dp"/>
    </RelativeLayout>
</RelativeLayout>