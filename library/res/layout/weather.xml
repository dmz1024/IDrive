<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/weatherLayoutId"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
        <TextView
                android:id="@+id/city"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/todayImgId"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
        <!--trsadminsy-->
        <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/todayImgId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/temperatureTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/temperatureDescTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/windTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="fill_parent"
        android:layout_height="0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
            <TextView
                    android:id="@+id/week1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <ImageView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/icon1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
            <TextView
                    android:id="@+id/temperatureText1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/temperatureDescText1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/windText1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:id="@+id/week2"
                    android:layout_width="wrap_content"/>
            <ImageView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/icon2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
            <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/temperatureText2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/temperatureDescText2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/windText2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
            <TextView
                    android:id="@+id/week3"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <ImageView
                    android:id="@+id/icon3"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
            <TextView
                    android:id="@+id/temperatureText3"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/temperatureDescText3"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            <TextView
                    android:id="@+id/windText3"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
        </LinearLayout>

    </LinearLayout>


