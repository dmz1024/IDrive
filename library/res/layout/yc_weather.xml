<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/weatherLayoutId"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="fill_parent"
                android:layout_height="0dp">
            <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">
                <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/todayImgId"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/todayTemId"
                        android:textSize="40sp"
                        android:textColor="@color/common_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_alignBottom="@id/todayTemId"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/todayTemId"
                        android:textSize="18sp"
                        android:textColor="@color/common_write"
                        android:id="@+id/temperatureDescTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
                android:background="#c0ffffff"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">
            <TextView
                    android:id="@+id/temperatureTextId"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="18sp"
                    android:textColor="@color/common_black"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/windTextId"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:textColor="@color/common_black"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_weight="5"
                android:layout_width="fill_parent"
                android:layout_height="0dp">
            <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/week1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <ImageView
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/temperatureText1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/temperatureDescText1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/windText1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
            </LinearLayout>
            <View
                    android:visibility="gone"
                    android:id="@+id/split_left"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/common_list_bg"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent">

            </View>
            <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">
                <TextView
                        style="@style/weather_bottom_text"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:id="@+id/week2"
                        android:layout_width="wrap_content"/>
                <ImageView
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/temperatureText2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/temperatureDescText2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/windText2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
            </LinearLayout>
            <View
                    android:visibility="gone"
                    android:id="@+id/split_right"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/common_list_bg"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent">
            </View>
            <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/week3"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <ImageView
                        android:id="@+id/icon3"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/temperatureText3"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/temperatureDescText3"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                <TextView
                        style="@style/weather_bottom_text"
                        android:id="@+id/windText3"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/loading_layout"/>
</FrameLayout>

