<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eeeeee"
              android:orientation="vertical">

    <include layout="@layout/layout_title_bar"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

        <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:textColor="#50BBDB"
                android:textSize="14sp"/>

        <View
                android:id="@+id/view_line"
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/tv_code"
                android:background="#CCCCCC"/>

        <EditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_toLeftOf="@id/view_line"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:paddingLeft="12dp"
                android:textColor="@color/tips_text_color"
                android:textSize="14sp"/>
    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#CCCCCC"/>

    <EditText
            android:id="@+id/et_verify"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:paddingLeft="24dp"
            android:textColor="@color/tips_text_color"
            android:textSize="14sp"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#CCCCCC"/>

    <EditText
            android:id="@+id/et_pass"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:paddingLeft="24dp"
            android:textColor="@color/tips_text_color"
            android:textSize="14sp"
            android:inputType="textPassword"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#CCCCCC"/>

    <EditText
            android:id="@+id/et_repass"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="再次输入密码"
            android:paddingLeft="24dp"
            android:textColor="@color/tips_text_color"
            android:textSize="14sp"
            android:inputType="textPassword"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#CCCCCC"/>

    <EditText
            android:id="@+id/et_invite"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="邀请码(选填)"
            android:paddingLeft="24dp"
            android:textColor="@color/tips_text_color"
            android:textSize="14sp"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#CCCCCC"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

        <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/register_check_box"
                android:checked="true"
                android:padding="12dp"
                android:layout_marginLeft="12dp"
        />

        <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="我已阅读并同意"
                android:textColor="@color/tips_text_color"
                android:textSize="12sp"
                android:layout_marginLeft="-12dp"/>

        <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="爱自驾用户注册协议"
                android:textColor="@color/base_color"
                android:textSize="12sp"/>
    </LinearLayout>

    <Button
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

</LinearLayout>