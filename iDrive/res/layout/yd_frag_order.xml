<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:background="@color/dfy_fff"
            android:orientation="horizontal" android:weightSum="2"
            android:layout_width="match_parent" android:layout_height="@dimen/size44">

        <RelativeLayout
                android:id="@+id/rl_left"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/dfy_fff"
                android:layout_height="@dimen/size44">
            <TextView
                    android:id="@+id/tv_1" android:textColor="@color/dfy_333" android:textSize="@dimen/size13"
                    android:text="@string/dfy_all_order" android:layout_centerInParent="true"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    />
            <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/size15" android:layout_height="@dimen/size15"
                    android:src="@drawable/dfy_personal_sort_drop" android:layout_toRightOf="@id/tv_1"
                    android:layout_centerVertical="true"
                    />

            <View
                    android:background="@color/dfy_dadada"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/size0.5" android:layout_height="match_parent">

            </View>

            <ImageView
                    android:id="@+id/iv_left"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent" android:layout_height="@dimen/size7"
                    android:layout_alignParentBottom="true" android:src="@drawable/dfy_personal_sort_border"
                    />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/size44">
            <TextView
                    android:id="@+id/tv_2" android:textColor="@color/dfy_333" android:textSize="@dimen/size13"
                    android:text="@string/dfy_time_order" android:layout_centerInParent="true"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    />
            <ImageView

                    android:layout_width="@dimen/size15" android:layout_height="@dimen/size15"
                    android:src="@drawable/dfy_personal_sort_drop" android:layout_toRightOf="@id/tv_2"
                    android:layout_centerVertical="true"
                    />
            <ImageView
                    android:id="@+id/iv_right"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent" android:layout_height="@dimen/size7"
                    android:layout_alignParentBottom="true" android:src="@drawable/dfy_personal_sort_border"
                    />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/frag_order"
            android:layout_width="match_parent" android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>