<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/idrive_white">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="@dimen/size8">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/size14"
                  android:layout_weight="1.0"
                  android:textColor="@color/detail_black"
                  android:text="三亚度假区东起"
                  android:id="@+id/desc_travelnote_item"
                  android:singleLine="true"
                  android:ellipsize="end"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2015/05/18"
                  android:id="@+id/date"
                  android:textSize="@dimen/size11"
                  android:textColor="@color/comment_date"
                android:layout_marginLeft="@dimen/size6"/>
    </LinearLayout>
    <HorizontalScrollView
            android:id="@+id/hs_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_month"
            android:orientation="horizontal"
            android:scrollbars="none" >
    <LinearLayout android:layout_width="fill_parent"
               android:layout_height="@dimen/size86"
               android:orientation="horizontal"
               android:id="@+id/Linear_travelnote_item"
               android:layout_marginTop="@dimen/size8"/>
    </HorizontalScrollView>
    <View android:layout_width="fill_parent" android:layout_height="0.5dip"
          android:background="@color/separator_grey"
          android:layout_marginTop="@dimen/size8"></View>
</LinearLayout>