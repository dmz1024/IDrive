<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingBottom="@dimen/size5"
        android:paddingTop="@dimen/size5"
        android:paddingRight="@dimen/size5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/iv_select"
            android:layout_marginLeft="@dimen/size5"
            android:src="@drawable/yd_cam_checked"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size17"
            android:layout_height="@dimen/size17"/>
    <TextView
            android:id="@+id/tv_name"
            android:textColor="#333"
            android:textSize="@dimen/sp13"
            android:text="太平洋5日险"
            android:layout_toRightOf="@id/iv_select"
            android:layout_marginLeft="@dimen/size7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="@dimen/size5"
            android:id="@+id/tv_chengren"
            android:textColor="#333"
            android:textSize="@dimen/sp13"
            android:text="成人："
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/iv_select"
            android:layout_marginLeft="@dimen/size7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_chengren_price"
            android:layout_marginTop="@dimen/size5"
            android:textColor="#ea541e"
            android:textSize="@dimen/sp13"
            android:text="200"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_chengren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_ertong"
            android:layout_marginTop="@dimen/size5"
            android:textColor="#333"
            android:textSize="@dimen/sp13"
            android:text="/份        儿童："
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_chengren_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_ertong_price"
            android:layout_marginTop="@dimen/size5"
            android:textColor="#ea541e"
            android:textSize="@dimen/sp13"
            android:text="300"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_ertong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="@dimen/size5"
            android:textColor="#333"
            android:textSize="@dimen/sp13"
            android:text="/份"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_ertong_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_desc"
            android:text="详情 >"
            android:textSize="@dimen/size13"
            android:textColor="#666"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>