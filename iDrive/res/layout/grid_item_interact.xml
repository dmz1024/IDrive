<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:id="@+id/image"
               android:layout_height="fill_parent"
               android:layout_width="fill_parent"
               android:scaleType="centerCrop"/>

    <ImageView android:id="@+id/icon_video_play"
               android:layout_height="@dimen/size50"
               android:layout_width="@dimen/size50"
               android:src="@drawable/icon_vedio_play"
               android:visibility="invisible"
               android:layout_centerInParent="true" />

    <RelativeLayout android:id="@+id/bg_location"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size30"
                    android:layout_alignParentBottom="true"
                    android:background="@color/shelter">

        <ImageView android:id="@+id/icon_location"
                   android:layout_height="@dimen/size15"
                   android:layout_width="@dimen/size15"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/size5"
                   android:src="@drawable/icon_map_middle"/>

        <TextView android:id="@+id/txt_location"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/icon_location"
                  android:layout_marginLeft="@dimen/size5"
                  android:text="sdsd"
                  android:textSize="12sp"
                  android:textColor="@color/idrive_white" />
    </RelativeLayout>

</RelativeLayout>