<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/idrive_white"
              android:layout_marginTop="@dimen/size8"
              android:id="@+id/layout_moment">
    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/separator_grey"></View>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="@dimen/size8">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/icon_moment"
                   android:layout_gravity="center_vertical"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/size14"
                  android:textColor="@color/detail_black"
                  android:layout_marginLeft="@dimen/size4"
                  android:text="精彩瞬间"
                  android:layout_weight="1.0"/>
        <ImageView android:layout_width="@dimen/size14"
                  android:layout_height="@dimen/size9"
                  android:src="@drawable/icon_arrow_down"
                  android:id="@+id/ic_momment_detail"
                  android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <com.ccpress.izijia.view.InsideListView android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/listview_momment"
                                            android:cacheColorHint="#00000000"
                                            android:divider="#00000000"
                                            android:listSelector="@null"
                                            android:dividerHeight="0.5dip"
                                            android:animateLayoutChanges="true"
                                            android:visibility="gone">

    </com.ccpress.izijia.view.InsideListView>
    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/separator_grey"></View>
</LinearLayout>