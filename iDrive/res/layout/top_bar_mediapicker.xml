<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/idrive_blue"
                android:layout_height="@dimen/top_bar_height">

    <ImageView android:id="@+id/btn_back"
               android:layout_width="@dimen/top_bar_height"
               android:layout_height="@dimen/top_bar_height"
               android:padding="@dimen/size8"
               android:src="@drawable/btn_back_drawable_idrive"/>

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_centerInParent="true"
              android:textColor="@color/idrive_white"
              android:textSize="@dimen/size14"
              android:text="@string/photo"/>


    <Button
            android:id="@+id/commit"
            android:background="@null"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:text="完成"
            android:layout_marginRight="@dimen/size5"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/size12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size30"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5"/>

    <RelativeLayout android:id="@+id/btn_picker_done"
                    android:layout_width="@dimen/size45"
                    android:layout_height="@dimen/size30"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_alignParentRight="true"
            android:visibility="gone">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:text="完成"
                  android:textColor="@color/idrive_white"/>
        <TextView android:id="@+id/txt_select_number"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:text="(0)"
                  android:textColor="@color/idrive_white"/>
    </RelativeLayout>

</RelativeLayout>