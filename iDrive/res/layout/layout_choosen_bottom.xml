<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/idive_light_grey"
              android:layout_marginTop="@dimen/size8"
              android:layout_marginBottom="@dimen/size48"
              android:id="@+id/layout_choose_bottom">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/idrive_white">
        <View android:layout_width="fill_parent"
              android:layout_height="0.5dip"
              android:background="@color/separator_grey"></View>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="@dimen/size8">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_marginBottom="@dimen/size8">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@drawable/icon_act_content"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="活动内容"
                          android:textColor="@color/detail_black"
                          android:textSize="@dimen/size14"
                          android:layout_weight="1.0"
                          android:layout_marginLeft="@dimen/size4"
                          android:id="@+id/act_title"/>
            </LinearLayout>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="@dimen/size150"
                       android:src="@drawable/cqsw_default_pic"
                       android:scaleType="centerCrop"
                       android:id="@+id/act_img"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="啦啦啦啦啦啦啦啦"
                      android:textColor="@color/detail_black"
                      android:textSize="@dimen/size14"
                      android:id="@+id/act_content"
                      android:layout_marginTop="@dimen/size8"/>
        </LinearLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="0.5dip"
              android:background="@color/separator_grey"></View>
    </LinearLayout>


    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:layout_marginTop="@dimen/size8"
          android:background="@color/separator_grey"></View>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/idrive_white">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/layout_apply">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/icon_apply"
                       android:layout_margin="@dimen/size8"/>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="报名方式"
                              android:textColor="@color/detail_black"
                              android:textSize="@dimen/size14"
                              android:layout_weight="1.0"
                              android:id="@+id/act_apply"
                              android:layout_marginTop="@dimen/size8"
                              android:layout_marginBottom="@dimen/size8"/>
                    <ImageView android:layout_width="@dimen/size14"
                               android:layout_height="@dimen/size9"
                               android:src="@drawable/icon_arrow_down"
                               android:id="@+id/ic_apply_detail"
                               android:layout_marginRight="@dimen/size8"
                               android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <com.ccpress.izijia.view.InsideListView android:layout_width="fill_parent"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/listview_apply"
                                                        android:cacheColorHint="#00000000"
                                                        android:divider="#00000000"
                                                        android:listSelector="@null"
                                                        android:dividerHeight="0.5dip"
                                                        android:animateLayoutChanges="true"
                                                        android:visibility="gone">

                </com.ccpress.izijia.view.InsideListView>

            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="0.5dip"
              android:background="@color/separator_grey"></View>
    </LinearLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:layout_marginTop="@dimen/size8"
          android:background="@color/separator_grey"></View>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:background="@color/idrive_white">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/icon_act_status"
                   android:layout_margin="@dimen/size8"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="状态"
                  android:textColor="@color/detail_black"
                  android:textSize="@dimen/size14"
                  android:layout_weight="1.0"
                  android:layout_marginTop="@dimen/size8"
                  android:layout_marginBottom="@dimen/size8"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="火热报名中"
                  android:textColor="@color/detail_black"
                  android:textSize="@dimen/size14"
                  android:id="@+id/act_status"
                  android:layout_marginRight="@dimen/size8"/>
    </LinearLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/separator_grey"></View>
</LinearLayout>