<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/size130"
        android:background="@color/idrive_white"
        android:gravity="center">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/size10">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="萤火虫咖啡"
                  android:textColor="@color/detail_black"
                  android:textStyle="bold"
                  android:textSize="@dimen/size15"
                  android:id="@+id/name"
                  android:maxLines="2"
                  android:ellipsize="end"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="地址:中国北京"
                  android:textColor="@color/popup_separator_grey"
                  android:textSize="@dimen/size12"
                  android:id="@+id/address"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:layout_marginTop="@dimen/size10"/>
    </LinearLayout>
   <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/separator_grey"></View>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/size40">
    <TextView android:layout_width="fill_parent"
              android:layout_height="@dimen/size40"
              android:text="导航"
              android:textColor="@color/bottom_bar_comment"
              android:textSize="@dimen/size14"
              android:id="@+id/navi"
              android:visibility="gone"
              android:gravity="center"
              android:clickable="true"
              android:onClick="onNaviClick"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="@dimen/size40"
                  android:text="路径规划"
                  android:textColor="@color/bottom_bar_comment"
                  android:textSize="@dimen/size14"
                  android:id="@+id/route_show"
                  android:gravity="center"
                  android:clickable="true"
                  android:onClick="onRouteClick"/>

    </RelativeLayout>
</LinearLayout>