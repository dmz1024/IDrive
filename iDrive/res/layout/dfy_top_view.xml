<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/dfy_50bbdb"
        android:layout_width="match_parent" android:layout_height="@dimen/size44">
    <ImageView android:layout_width="@dimen/size26"
               android:layout_height="@dimen/size26"
               android:id="@+id/iv_left"
               android:layout_centerVertical="true"
               android:scaleType="fitXY"
               android:src="@drawable/dfy_icon_back"
               android:layout_marginLeft="@dimen/size8"
            />

    <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size15"
            android:text="详情页"
            android:textColor="@color/dfy_fff"
            />
    <ProgressBar
            android:id="@+id/pb_load"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_center"
            android:layout_marginRight="@dimen/size3"
            android:layout_width="@dimen/size20"
            android:layout_height="@dimen/size20"/>
    <ImageView
            android:layout_width="@dimen/size26" android:layout_height="@dimen/size26"
            android:id="@+id/iv_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size8"
            />
</RelativeLayout>
