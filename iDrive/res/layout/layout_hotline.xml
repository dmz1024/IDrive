<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/idrive_white"
              android:layout_marginTop="@dimen/size8"
        android:id="@+id/layout_hotline">
    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/separator_grey"></View>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="@dimen/size8">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/icon_hotline"
                   android:layout_gravity="center_vertical"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/size14"
                  android:textColor="@color/detail_black"
                  android:layout_marginLeft="@dimen/size4"
                  android:text="咨询热线："/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/size14"
                  android:textColor="@color/detail_black"
                  android:id="@+id/hotline"
                  android:layout_marginLeft="@dimen/size4"
                  android:text="4008008120"
                  android:autoLink="phone"/>
    </LinearLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/separator_grey"></View>
</LinearLayout>