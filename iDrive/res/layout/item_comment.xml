<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/idrive_white"
              android:paddingTop="@dimen/size14"
              android:paddingRight="@dimen/size8"
              android:paddingLeft="@dimen/size8">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_img"
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_marginRight="@dimen/size5"
            android:src="@drawable/default_user_img"
            app:border_width="1dp"
            app:border_color="@android:color/transparent"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center_vertical">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/Linear_user"
                      android:background="@color/idrive_white">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="杜兮"
                      android:textColor="@color/idrive_blue"
                      android:textSize="@dimen/size14"
                      android:id="@+id/user_name"
                      android:layout_weight="1.0"
                      android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2015/5/12"
                      android:textColor="@color/comment_date"
                      android:textSize="@dimen/size11"
                      android:id="@+id/txt_date"
                      android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="爱情在巴黎扑了个空……"
                  android:textColor="@color/detail_black"
                  android:textSize="@dimen/size13"
                  android:id="@+id/txt_comment"
                  android:layout_marginTop="@dimen/size10"
                  android:layout_gravity="center_vertical"/>
        <View android:layout_width="fill_parent"
              android:layout_height="0.5dip"
              android:background="@color/separator_grey"
              android:layout_below="@+id/description"
                android:layout_marginTop="@dimen/size14"></View>
    </LinearLayout>


</LinearLayout>