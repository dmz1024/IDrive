<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="@dimen/size12"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >
    <ImageView
            android:id="@+id/iv_img"
            android:scaleType="fitXY"
            android:src="@drawable/dfy_reg_bg"
            android:layout_width="@dimen/size84"
            android:layout_height="@dimen/size55"/>
    <TextView
            android:id="@+id/tv_title"
            android:singleLine="true"
            android:textColor="#333"
            android:text="情侣套餐优惠出售"
            android:layout_marginLeft="@dimen/size5"
            android:layout_toRightOf="@id/iv_img"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginTop="@dimen/size5"
            android:layout_below="@id/tv_title"
            android:layout_alignParentRight="true"
            android:src="@drawable/yd_detail_next"
            android:layout_width="@dimen/size15"
            android:layout_height="@dimen/size15"/>
        <TextView
                android:id="@+id/tv_desc"
                android:layout_alignLeft="@id/tv_title"
                android:layout_marginTop="@dimen/size5"
                android:layout_below="@id/tv_title"
                android:maxLines="1"
                android:textSize="@dimen/sp11"
                android:textColor="#666"
                android:layout_toLeftOf="@id/iv_icon"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_price"
            android:textSize="@dimen/sp15"
            android:textColor="#f00"
            android:text="￥150"
            android:layout_marginTop="@dimen/size7"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <com.ccpress.izijia.yd.view.CountTextView
            android:id="@+id/tv_count"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_icon"
            android:layout_marginTop="@dimen/size3"
            android:text="0"
            android:textSize="@dimen/sp14"
            android:gravity="center"
            android:background="@drawable/yd_count_bj"
            android:layout_width="@dimen/size75"
            android:layout_height="@dimen/size21"/>
    <View
            android:id="@+id/view"
            android:layout_below="@id/tv_count"
            android:background="#e1e1e1"
            android:layout_marginTop="@dimen/size6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"/>

</RelativeLayout>