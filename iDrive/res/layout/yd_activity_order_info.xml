<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/apk/res-auto"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
                  android:orientation="vertical"
                  android:background="#f1f1f1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/rl_godetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size50"
                    android:lineSpacingExtra="@dimen/size5"
                    android:layout_marginRight="@dimen/size35"
                    android:paddingTop="@dimen/size10"
                    android:textColor="@color/dfy_333"
                    android:paddingLeft="@dimen/size5"
                    android:textSize="@dimen/size12"
                    />

            <ImageView
                    android:id="@+id/iv_goDetail"
                    android:src="@drawable/dfy_detail_date_ch"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/size17" android:layout_height="@dimen/size17"/>
        </RelativeLayout>
        <View
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"/>
        <com.ccpress.izijia.yd.view.ViewText
                tool:ViewText_title="订单信息"
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_order_info"
                android:layout_marginTop="@dimen/size15"
                android:text="订单"
                android:layout_marginLeft="@dimen/size20"
                android:textColor="#666"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_marginTop="@dimen/size20"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"/>
        <com.ccpress.izijia.yd.view.ViewText
                tool:ViewText_title="费用详情"
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.ccpress.izijia.yd.view.MaxListView
                android:id="@+id/lv_monry"
                android:layout_marginLeft="@dimen/size20"
                android:dividerHeight="@dimen/size5"
                android:divider="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:layout_marginTop="@dimen/size20"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"/>
        <RelativeLayout
                android:padding="@dimen/size13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_total_money"
                    android:text="订单总额："
                    android:layout_marginRight="@dimen/size20"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp12"
                    android:textColor="#333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_obligation_money"
                    android:layout_below="@id/tv_total_money"
                    android:layout_marginRight="@dimen/size20"
                    android:layout_alignParentRight="true"
                    android:text="待付总额："
                    android:textSize="@dimen/sp12"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"/>
        <com.ccpress.izijia.yd.view.ViewText
                tool:ViewText_title="联系人信息"
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_linkman_info"
                android:layout_marginTop="@dimen/size10"
                android:layout_marginLeft="@dimen/size20"
                android:textColor="#666"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:background="#e9e9e9"
                android:layout_marginTop="@dimen/size10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"/>
        <com.ccpress.izijia.yd.view.ViewText
                tool:ViewText_title="游客信息"
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.ccpress.izijia.yd.view.MaxListView
                android:id="@+id/lv_tourist"
                android:layout_marginBottom="@dimen/size20"
                android:divider="#e9e9e9"
                android:layout_marginLeft="@dimen/size23"
                android:dividerHeight="@dimen/size1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>