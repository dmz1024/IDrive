<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_call">
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/detail_black"
              android:textSize="@dimen/size14"
              android:text="40082082020"
              android:id="@+id/phone_num"
              android:gravity="center_horizontal"
              android:layout_marginTop="@dimen/size20"
              android:layout_marginBottom="@dimen/size20"/>
    <View android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:background="@color/common_list_bg"></View>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="@color/detail_txt_pressed"
                  android:textSize="@dimen/size14"
                  android:text="取消"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:paddingTop="@dimen/size10"
                  android:paddingBottom="@dimen/size10"
                  android:id="@+id/phone_cancel"/>
        <View android:layout_width="1dip"
              android:layout_height="fill_parent"
              android:layout_marginTop="@dimen/size5"
              android:layout_marginBottom="@dimen/size5"
              android:background="@color/common_list_bg"></View>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="@color/detail_txt_pressed"
                  android:textSize="@dimen/size14"
                  android:text="确认"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:id="@+id/phone_call"
                  android:paddingTop="@dimen/size10"
                  android:paddingBottom="@dimen/size10"/>
    </LinearLayout>
</LinearLayout>