<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="#95191919"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:background="#fff"
            android:paddingBottom="@dimen/size10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ListView
                android:id="@+id/lv_option"

                android:dividerHeight="0dp"
                android:background="#fff"
                android:layout_marginBottom="@dimen/size5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </ListView>

        <RelativeLayout
                android:background="#fff"
                android:layout_marginBottom="@dimen/size10"
                android:id="@+id/rl_bottom"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lv_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/bt_cancle"
                    android:text="取消"
                    android:textColor="@color/yd_fefefe"
                    android:textSize="@dimen/sp15"
                    android:background="#999"
                    android:layout_width="@dimen/size105"
                    android:layout_height="@dimen/size23"/>
            <Button
                    android:id="@+id/bt_ok"
                    android:text="确定"
                    android:layout_toRightOf="@id/bt_cancle"
                    android:textColor="@color/yd_fefefe"
                    android:textSize="@dimen/sp15"
                    android:layout_marginLeft="@dimen/size8"
                    android:background="@drawable/yd_selector_50bbbb"
                    android:layout_width="@dimen/size105"
                    android:layout_height="@dimen/size23"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>