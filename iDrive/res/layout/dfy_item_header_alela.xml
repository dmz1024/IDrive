<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/dfy_e5e5e5"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_marginTop="@dimen/size8"
            android:layout_width="match_parent" android:layout_height="@dimen/size40">

        <TextView
                android:id="@+id/tv_my" android:layout_centerInParent="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="领队介绍" android:textSize="@dimen/size15" android:textColor="@color/dfy_333"
                />
        <View
                android:layout_toLeftOf="@id/tv_my" android:background="@color/dfy_dbdbdb"
                android:id="@+id/v1" android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size5"
                android:layout_width="match_parent" android:layout_height="@dimen/size0.5">

        </View>
        <View
                android:layout_toRightOf="@id/tv_my" android:background="@color/dfy_dbdbdb"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size5"
                android:layout_width="match_parent" android:layout_height="@dimen/size0.5">

        </View>

    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/size10"
            android:background="@color/dfy_fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size120">
            <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_image"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_width="130dp"
                    android:layout_height="110dp"/>
            <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_toRightOf="@id/iv_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dfy_333"
                    android:textSize="@dimen/size13"
                    />

            <View
                    android:layout_below="@id/tv_brand_name"
                    android:layout_alignLeft="@id/tv_brand_name"
                    android:layout_alignRight="@id/tv_brand_name"
                    android:background="@color/dfy_dbdbdb"
                    android:layout_marginTop="@dimen/size5"
                    android:layout_width="match_parent" android:layout_height="@dimen/size0.5">

            </View>
        </RelativeLayout>



        <TextView

                android:paddingBottom="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:paddingTop="@dimen/size10"
                android:id="@+id/tv_dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size12"
                android:textColor="@color/dfy_333"
                android:background="@drawable/dfy_lay_tv_bg"
                />

    </LinearLayout>

    <RelativeLayout
            android:layout_marginTop="@dimen/size8"
            android:layout_width="match_parent" android:layout_height="@dimen/size40">

        <TextView
                android:id="@+id/tv_my1" android:layout_centerInParent="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="领队产品" android:textSize="@dimen/size15" android:textColor="@color/dfy_333"
                />
        <View
                android:layout_toLeftOf="@id/tv_my1" android:background="@color/dfy_dbdbdb"
                android:id="@+id/v11" android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size5"
                android:layout_width="match_parent" android:layout_height="@dimen/size0.5">

        </View>
        <View
                android:layout_toRightOf="@id/tv_my1" android:background="@color/dfy_dbdbdb"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size5"
                android:layout_width="match_parent" android:layout_height="@dimen/size0.5">

        </View>

    </RelativeLayout>

</LinearLayout>