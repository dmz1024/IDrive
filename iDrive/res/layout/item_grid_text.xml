<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/yd_fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_title"
            android:visibility="gone"
            android:textColor="@color/yd_333"
            android:textSize="@dimen/sp13"
            android:layout_marginTop="@dimen/size7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.ccpress.izijia.yd.view.MaxGridView
            android:id="@+id/gv_content"
            android:layout_marginTop="@dimen/size9"
            android:layout_marginBottom="@dimen/size9"
            android:numColumns="4"
            android:gravity="center"
            android:verticalSpacing="@dimen/size12"
            android:horizontalSpacing="@dimen/size11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </com.ccpress.izijia.yd.view.MaxGridView>
</LinearLayout>