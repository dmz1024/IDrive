<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/top_bar_height"
                android:background="@color/idrive_blue"
                android:id="@+id/top_bar_post_edit">

    <ImageView android:id="@+id/btn_back"
               android:layout_width="@dimen/top_bar_height"
               android:layout_height="@dimen/top_bar_height"
               android:padding="@dimen/size8"
               android:clickable="true"
               android:onClick="onBtnBackClick"
               android:src="@drawable/btn_back_drawable_idrive"/>

    <TextView android:id="@+id/txt_close"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/btn_back"
              android:text="关闭"
              android:textSize="19sp"
              android:visibility="invisible"
              android:onClick="onBtnCloseClick"
              android:clickable="true"
              android:textColor="@color/idrive_white" />

    <TextView android:id="@+id/bar_title"
              android:layout_width="@dimen/size180"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:textColor="@color/common_write"
              android:textSize="19sp"
              android:ellipsize="end"
              android:lines="1"
              android:gravity="center"/>


    <ImageView android:id="@+id/web_btn_share"
               android:layout_width="@dimen/size25"
               android:layout_height="@dimen/size25"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/size10"
               android:onClick="OnBtnShareClick"
               android:src="@drawable/icon_forward_white" />

    <!--<LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_toRightOf="@+id/bar_title"
                  android:layout_centerInParent="true"
                  android:id="@+id/linear_share"
                  android:onClick="OnBtnShareClick"
                  android:layout_weight="1.0">

        <ImageView android:layout_width="@dimen/size20"
                   android:layout_height="@dimen/size20"
                   android:layout_gravity="center"
                   android:src="@drawable/icon_share"/>

    </LinearLayout>-->


</RelativeLayout>