<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#222222"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_day"
        android:layout_toRightOf="@id/tv_day"
        android:textColor="#222222"
        android:textSize="12sp" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_1"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/tv_month"
        android:scaleType="fitXY" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_2"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/iv_1"
        android:scaleType="fitXY" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_3"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/iv_2"
        android:scaleType="fitXY" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_4"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/iv_3"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_1"
        android:text="三月"
        android:textColor="#222222"
        android:textSize="14sp" />

</RelativeLayout>