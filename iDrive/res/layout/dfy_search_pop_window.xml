<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <RelativeLayout
                android:background="@color/dfy_50bbdb"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/size40">
            <TextView
                    android:id="@+id/tv_cancle"
                    android:text="@string/dfy_cancle"
                    android:textColor="@color/dfy_fff"
                    android:layout_marginLeft="@dimen/size25"
                    android:textSize="@dimen/size15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_clear"
                    android:text="@string/dfy_clear"
                    android:textColor="@color/dfy_fff"
                    android:textSize="@dimen/size15"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_ok"
                    android:text="@string/dfy_ok"
                    android:textColor="@color/dfy_fff"
                    android:textSize="@dimen/size15"
                    android:layout_marginRight="@dimen/size20"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout android:orientation="vertical" android:layout_weight="2" android:layout_width="0dp"
                          android:layout_height="match_parent" android:background="@color/dfy_ebebeb">
                <TextView
                        android:id="@+id/pop_tv_city"
                        android:gravity="center"
                        android:text="@string/dfy_city"
                        android:textSize="@dimen/size15"
                        android:background="@color/dfy_fff"
                        android:textColor="@color/dfy_50bbdb"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size40"/>

                <TextView
                        android:id="@+id/pop_tv_days"
                        android:text="@string/dfy_days"
                        android:textSize="@dimen/size15"
                        android:gravity="center"
                        android:textColor="@color/dfy_333"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size40"/>

                <TextView
                        android:id="@+id/pop_tv_time"
                        android:text="@string/dfy_time"
                        android:gravity="center"
                        android:textSize="@dimen/size15"
                        android:textColor="@color/dfy_333"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size40"/>
            </LinearLayout>

            <com.ccpress.izijia.dfy.view.NoScrollViewPager
                    android:id="@+id/pop_vp"
                    android:layout_weight="5"
                    android:background="@color/dfy_fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></com.ccpress.izijia.dfy.view.NoScrollViewPager>

        </LinearLayout>

    </LinearLayout>
