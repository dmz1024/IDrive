<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/idrive_white">
    <RelativeLayout android:id="@+id/top_layout"
                    android:layout_height="@dimen/size45"
                    android:layout_width="fill_parent"
                    android:background="@color/idive_light_grey">
        <TextView android:id="@+id/txt_cancel"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/size8"
                  android:textColor="@color/idrive_blue"
                  android:textSize="@dimen/size15"
                  android:text="取消"/>
        <TextView android:id="@+id/title"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_centerInParent="true"
                  android:textColor="@color/idrive_blue"
                  android:textSize="@dimen/size15"
                  android:text="选择行程"/>
        <TextView android:id="@+id/txt_confirm"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/idrive_blue"
                  android:textSize="@dimen/size15"
                  android:text="确定"
                  android:layout_marginRight="@dimen/size8"/>
    </RelativeLayout>
    <com.ccpress.izijia.view.WheelView android:layout_width="fill_parent"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/wheel_view_wv">

    </com.ccpress.izijia.view.WheelView>
</LinearLayout>