<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/idive_light_grey">
    <include layout="@layout/top_bar_productdetail"></include>
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="vertical"
                android:id="@+id/scrollView"
                android:background="@color/idive_light_grey"
                android:layout_marginTop="@dimen/top_bar_height">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="@color/idrive_white"
                          android:paddingRight="@dimen/size8"
                          android:paddingLeft="@dimen/size8"
                         android:paddingTop="@dimen/size8"
                         android:paddingBottom="@dimen/size8">
                <RelativeLayout android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/size150"/>

                    <com.viewpagerindicator.CirclePageIndicator
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/pager_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dip"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            app:fillColor="#50bbdb"
                            app:pageColor="#ffffff"
                            app:strokeWidth="0dp"
                            app:snap="false"/>
                    <TextView android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/size14"
                              android:textColor="@color/idrive_white"
                              android:text="颐和园"
                              android:id="@+id/img_title"
                              android:textStyle="bold"
                              android:maxLines="2"
                              android:ellipsize="end"
                              android:padding="@dimen/size4"
                              android:background="@drawable/shape_list_shadow"/>
                </RelativeLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingTop="@dimen/size8">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_act_addr"
                               android:id="@+id/ic_01"/>
                    <LinearLayout android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_marginLeft="@dimen/size4">
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="@dimen/size14"
                                      android:textColor="@color/detail_black"
                                      android:id="@+id/text001"
                                      android:text="活动地址："
                                      />
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="@dimen/size14"
                                      android:textColor="@color/detail_black"
                                      android:maxLines="2"
                                      android:ellipsize="end"
                                      android:id="@+id/text01"
                                      android:text="海淀区西安市"
                                      android:layout_marginLeft="@dimen/size4"/>
                        </LinearLayout>
                        <View android:layout_width="fill_parent"
                              android:layout_height="0.5dip"
                              android:layout_marginTop="@dimen/size8"
                              android:background="@color/separator_grey"></View>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingTop="@dimen/size8"
                              android:id="@+id/lineat02">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_act_time"
                               android:id="@+id/ic_02"/>
                    <LinearLayout android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_marginLeft="@dimen/size4">
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="@dimen/size14"
                                      android:textColor="@color/detail_black"
                                      android:id="@+id/text002"
                                      android:text="活动时间："/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="@dimen/size14"
                                      android:textColor="@color/detail_black"
                                      android:maxLines="2"
                                      android:ellipsize="end"
                                      android:id="@+id/text02"
                                      android:text="2015-4-9"
                                      android:layout_marginLeft="@dimen/size4"/>
                        </LinearLayout>
                        <View android:layout_width="fill_parent"
                              android:layout_height="0.5dip"
                              android:layout_marginTop="@dimen/size8"
                              android:background="@color/separator_grey"></View>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingTop="@dimen/size8">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_sponsor"
                               android:layout_gravity="center_vertical"
                               android:id="@+id/ic_03"/>
                    <LinearLayout android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/size14"
                                  android:textColor="@color/detail_black"
                                  android:id="@+id/text003"
                                  android:text="主办方："
                                  android:layout_marginLeft="@dimen/size4"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/size14"
                                  android:textColor="@color/detail_black"
                                  android:id="@+id/text03"
                                  android:text="爱自驾"
                                  android:layout_marginLeft="@dimen/size4"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="fill_parent"
                  android:layout_height="0.5dip"
                  android:background="@color/separator_grey"></View>

            <include layout="@layout/layout_hotline"></include>
            <include layout="@layout/layout_momment"></include>

            <include layout="@layout/layout_choosen_bottom"></include>
            <include layout="@layout/layout_selfdrive_bottom"
                    android:visibility="gone"></include>

        </LinearLayout>
    </ScrollView>
    <include layout="@layout/bottom_bar_productdetail"
            android:visibility="gone"></include>
    <include layout="@layout/loading_layout_material"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/size45"
            android:layout_marginBottom="@dimen/size45"></include>

</merge>