<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/top_bar_height"
                android:background="@color/idrive_blue"
                android:id="@+id/top_bar_post_edit">

    <ImageView android:id="@+id/btn_back"
               android:layout_width="@dimen/top_bar_height"
               android:layout_height="@dimen/top_bar_height"
               android:padding="@dimen/size8"
               android:clickable="true"
               android:onClick="onBtnBackClick"
               android:src="@drawable/btn_back_drawable_idrive"/>

    <TextView android:id="@+id/bar_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/post_edit"
              android:layout_centerInParent="true"
              android:textColor="@color/common_write"
              android:textSize="19sp"
              android:layout_gravity="center"/>

    <TextView android:id="@+id/txt_send"
              android:layout_width="@dimen/top_bar_height"
              android:layout_height="@dimen/top_bar_height"
              android:text="@string/send"
              android:gravity="center"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:clickable="true"
              android:textColor="@color/common_write"
              android:textSize="14sp" />

</RelativeLayout>