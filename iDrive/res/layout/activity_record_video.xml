<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    <include layout="@layout/top_bar_video" />

    <RelativeLayout android:id="@+id/btn_video_layout"
                    android:layout_height="@dimen/size110"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#000000" >
        <ImageView android:id="@+id/btn_video"
                   android:layout_width="@dimen/size50"
                   android:layout_height="@dimen/size50"
                   android:layout_centerInParent="true"
                   android:src="@drawable/btn_video_normal" />
    </RelativeLayout>

    <View android:id="@+id/progress_bar"
          android:layout_width="fill_parent"
          android:layout_height="@dimen/size3"
          android:layout_alignTop="@id/btn_video_layout"
          android:visibility="invisible"
          android:background="@color/idrive_blue" />

</RelativeLayout>