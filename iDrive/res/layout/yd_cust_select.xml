<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_title"
            android:textSize="@dimen/sp14"
            android:textColor="#333"
            android:text="性别"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/mi"
                android:layout_marginLeft="@dimen/size2"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#f00"
                android:layout_toRightOf="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/iv_1"
            android:layout_marginLeft="@dimen/size8"
            android:src="@drawable/yd_select_checked"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mi"
            android:layout_width="@dimen/size15"
            android:layout_height="@dimen/size15"/>
    <TextView
            android:id="@+id/tv_1"
            android:textSize="@dimen/sp13"
            android:textColor="#333"
            android:text="男"
            android:layout_marginLeft="@dimen/size5"
            android:layout_toRightOf="@id/iv_1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/iv_2"
            android:layout_marginLeft="@dimen/size18"
            android:src="@drawable/yd_select"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_1"
            android:layout_width="@dimen/size15"
            android:layout_height="@dimen/size15"/>
    <TextView
            android:id="@+id/tv_2"
            android:textSize="@dimen/sp13"
            android:textColor="#333"
            android:text="女"
            android:layout_marginLeft="@dimen/size5"
            android:layout_toRightOf="@id/iv_2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>