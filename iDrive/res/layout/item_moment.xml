<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/idrive_white"
              android:padding="@dimen/size8">
    <View android:layout_width="fill_parent"
          android:layout_height="0.5dip"
          android:background="@color/separator_grey"></View>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/size8">
        <ImageView android:layout_width="@dimen/size80"
                   android:layout_height="@dimen/size80"
                   android:scaleType="centerCrop"
                   android:background="@drawable/cqsw_default_pic"
                   android:id="@+id/img"/>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_toRightOf="@+id/img"
                      android:layout_marginLeft="@dimen/size8"
                      android:layout_alignBottom="@+id/img"
                android:layout_alignTop="@+id/img">
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/title"
                      android:text="济州岛"
                      android:textSize="@dimen/size14"
                      android:textColor="@color/detail_black"
                      android:layout_weight="1.0"
                      android:ellipsize="end"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/time"
                      android:text="20150201"
                      android:textSize="@dimen/size11"
                      android:textColor="@color/time"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>