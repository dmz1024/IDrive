<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/dfy_f1f1f1"
        android:layout_height="@dimen/size60">
<RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/dfy_f1f1f1"
                android:layout_height="@dimen/size40">


    <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_more"
                android:textSize="@dimen/size11"
                android:textColor="@color/dfy_666"
                android:text="@string/loadmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <ImageView
                android:id="@+id/iv_more"
                android:layout_marginLeft="@dimen/size3"
                android:layout_toRightOf="@id/tv_more"
                android:layout_centerVertical="true"
                android:src="@drawable/dfy_icon_jiazai"
                android:layout_width="@dimen/size16"
                android:layout_height="@dimen/size16"/>

        <ProgressBar
                android:id="@+id/pb_more"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/size3"
                android:layout_toRightOf="@id/tv_more"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/size16"
                android:layout_height="@dimen/size16"/>

    </RelativeLayout>

</RelativeLayout>
</LinearLayout>