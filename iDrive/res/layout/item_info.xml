<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="8dp" >

        <com.froyo.commonjar.view.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
            android:src="@drawable/icon_default_header" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_header"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_header"
            android:text="凌潇潇"
            android:textColor="@color/base_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/tv_name"
            android:src="@drawable/icon_female" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_header"
            android:text="好想去……结伴一起去旅行!"
            android:textColor="#222222"
            android:textSize="14sp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/tv_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_header"
            android:scaleType="fitXY"
            android:src="@drawable/icon_paris" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_image"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:text="这样的巴黎你见过吗？好想去一次，说走就走的旅行，come on ……"
            android:textColor="#666666"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_image"
            android:layout_below="@id/iv_image"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_info_parise"
                android:drawablePadding="5dp"
                android:text="10"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_prise"
                android:drawableLeft="@drawable/icon_info_comment"
                android:drawablePadding="5dp"
                android:text="10"
                android:textColor="#666666"
                android:textSize="10sp" />

            <View
                android:id="@+id/view_line"
                android:layout_width="1px"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/tv_comment"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/view_line"
                android:drawableLeft="@drawable/icon_info_share"
                android:drawablePadding="5dp"
                android:text="10"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="2015/01/30"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>