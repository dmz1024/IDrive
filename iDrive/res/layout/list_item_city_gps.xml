<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:minHeight="@dimen/size45"
                android:layout_height="match_parent">

    <ImageView android:id="@+id/icon_location"
               android:layout_width="@dimen/size15"
               android:layout_height="@dimen/size15"
               android:layout_marginLeft="@dimen/size16"
               android:layout_centerVertical="true"
               android:src="@drawable/icon_map_middle" />

    <TextView android:id="@+id/txt_name_GPS"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@id/icon_location"
              android:layout_marginLeft="@dimen/size5"
              android:textColor="#222222"
              android:textStyle="bold"
              android:textSize="14sp" />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/txt_name_GPS"
              android:layout_marginLeft="@dimen/size10"
              android:layout_centerVertical="true"
              android:text="@string/gps_location"
              android:textColor="#999999"
              android:textSize="12sp" />

    <View android:layout_height="0.5dp"
          android:layout_width="fill_parent"
          android:layout_marginRight="@dimen/size16"
          android:layout_marginLeft="@dimen/size16"
          android:layout_alignParentBottom="true"
          android:background="#CCCCCC" />

</RelativeLayout>