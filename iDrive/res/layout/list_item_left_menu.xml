<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/size50">

    <View android:id="@+id/vertical_separate"
            android:layout_height="@dimen/size25"
          android:layout_width="0.5dp"
          android:layout_centerInParent="true"
          android:background="@color/separator_grey" />

    <TextView android:id="@+id/tag_left"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_toLeftOf="@id/vertical_separate"
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/size30"
              android:textColor="@color/detail_black"
              android:textSize="16sp" />

    <TextView android:id="@+id/tag_right"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_toRightOf="@id/vertical_separate"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/size30"
              android:textColor="@color/detail_black"
              android:textSize="16sp" />

    <View android:layout_height="0.5dp"
          android:layout_width="fill_parent"
          android:layout_marginLeft="@dimen/size20"
          android:layout_marginRight="@dimen/size20"
          android:layout_alignParentBottom="true"
          android:background="@color/separator_grey" />

</RelativeLayout>