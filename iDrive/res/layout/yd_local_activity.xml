<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
            android:background="#f1f1f1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <RelativeLayout
                android:id="@+id/rl_top"
                android:background="#fff"
                android:paddingBottom="@dimen/size14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.ccpress.izijia.yd.view.RotationViewPager
                    android:id="@+id/rvp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size170"/>
            <ImageView
                    android:id="@+id/iv_back"
                    android:src="@drawable/yd_back_left"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginLeft="@dimen/size11"
                    android:layout_width="@dimen/size15"
                    android:layout_height="@dimen/size15"/>
            <TextView
                    android:id="@+id/tv_name"
                    android:textSize="@dimen/sp20"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_1"
                    android:text="参考价格"
                    android:layout_marginLeft="@dimen/size12"
                    android:textColor="#666"
                    android:layout_below="@id/rvp"
                    android:textSize="@dimen/sp11"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_price"
                    android:layout_toRightOf="@id/tv_1"
                    android:layout_marginLeft="@dimen/size12"
                    android:textColor="#f00"
                    android:layout_below="@id/rvp"
                    android:textSize="@dimen/sp11"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <FrameLayout
                    android:id="@+id/fg_star"
                    android:background="@drawable/yd_star_0"
                    android:layout_alignLeft="@id/tv_1"
                    android:layout_marginTop="@dimen/size4"
                    android:layout_below="@id/tv_1"
                    android:layout_width="@dimen/size60"
                    android:layout_height="@dimen/size15">
            </FrameLayout>

            <TextView
                    android:id="@+id/tv_star"
                    android:layout_below="@id/tv_1"
                    android:textSize="@dimen/sp10"
                    android:textColor="#0c97f3"
                    android:text="5.0"
                    android:layout_marginTop="@dimen/size5"
                    android:layout_toRightOf="@id/fg_star"
                    android:layout_marginLeft="@dimen/size12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/bt_tel"
                    android:text="联系营地"
                    android:layout_alignBottom="@id/fg_star"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size6"
                    android:textColor="@color/yd_fefefe"
                    android:textSize="@dimen/sp15"
                    android:background="@drawable/yd_selector_50bbbb"
                    android:layout_width="@dimen/size81"
                    android:layout_height="@dimen/size27"/>
        </RelativeLayout>

        <RelativeLayout
                android:background="#fff"
                android:paddingBottom="@dimen/size10"
                android:padding="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_2"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:text="【基本信息】"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_time"
                    android:text="111"
                    android:layout_alignLeft="@id/tv_2"
                    android:layout_below="@id/tv_2"
                    android:textSize="@dimen/sp12"
                    android:layout_marginLeft="@dimen/size6"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_sex"
                    android:text="111"
                    android:layout_below="@id/tv_2"
                    android:textSize="@dimen/sp12"
                    android:layout_centerHorizontal="true"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_age"
                    android:text="111"
                    android:layout_below="@id/tv_2"
                    android:textSize="@dimen/sp12"
                    android:layout_alignParentRight="true"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_area"
                    android:text="111"
                    android:layout_alignLeft="@id/tv_2"
                    android:layout_below="@id/tv_time"
                    android:textSize="@dimen/sp12"
                    android:layout_marginLeft="@dimen/size6"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_speciality"
                    android:text="111"
                    android:layout_below="@id/tv_sex"
                    android:textSize="@dimen/sp12"
                    android:layout_alignLeft="@id/tv_sex"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:background="#fff"
                android:paddingBottom="@dimen/size10"
                android:padding="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_3"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:text="【自我介绍】"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_content_1"
                    android:layout_alignLeft="@id/tv_3"
                    android:layout_below="@id/tv_3"
                    android:textSize="@dimen/sp12"
                    android:layout_marginLeft="@dimen/size6"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:background="#fff"
                android:paddingBottom="@dimen/size10"
                android:padding="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_4"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:text="【服务描述】"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_content_2"
                    android:layout_alignLeft="@id/tv_4"
                    android:layout_below="@id/tv_4"
                    android:textSize="@dimen/sp12"
                    android:layout_marginLeft="@dimen/size6"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:background="#fff"
                android:paddingBottom="@dimen/size10"
                android:padding="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_5"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:text="【价格说明】"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_content_3"
                    android:layout_alignLeft="@id/tv_5"
                    android:layout_below="@id/tv_5"
                    android:textSize="@dimen/sp12"
                    android:layout_marginLeft="@dimen/size6"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:background="#fff"
                android:paddingBottom="@dimen/size10"
                android:padding="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_6"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:text="【预订须知】"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_content_4"
                    android:layout_alignLeft="@id/tv_6"
                    android:layout_below="@id/tv_6"
                    android:textSize="@dimen/sp12"
                    android:layout_marginLeft="@dimen/size6"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:background="#fff"
                android:paddingBottom="@dimen/size10"
                android:padding="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_7"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:text="【用户评价】"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_all"
                    android:text="全部点评"
                    android:padding="@dimen/size3"
                    android:layout_below="@id/tv_7"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginTop="@dimen/size10"
                    android:textColor="@color/dfy_fff"
                    android:gravity="center"
                    android:textSize="@dimen/size12"
                    android:background="@color/dfy_50bbdb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_comment"
                    android:text="综合评价"
                    android:padding="@dimen/size3"
                    android:layout_below="@id/tv_7"
                    android:layout_marginLeft="@dimen/size12"
                    android:layout_marginTop="@dimen/size10"
                    android:textColor="@color/dfy_333"
                    android:layout_toRightOf="@id/tv_all"
                    android:gravity="center"
                    android:textSize="@dimen/size12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <FrameLayout
                    android:id="@+id/fg_comment"
                    android:background="@drawable/yd_star_0"
                    android:layout_toRightOf="@id/tv_comment"
                    android:layout_marginTop="@dimen/size11"
                    android:layout_below="@id/tv_7"
                    android:layout_marginLeft="@dimen/size8"
                    android:layout_width="@dimen/size60"
                    android:layout_height="@dimen/size15">
            </FrameLayout>

            <View
                    android:id="@+id/v_1"
                    android:background="#ebebeb"
                    android:layout_below="@id/tv_all"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size1"/>

            <com.ccpress.izijia.yd.view.MaxListView
                    android:id="@+id/lv_comment"
                    android:divider="#ebebeb"
                    android:layout_below="@id/v_1"
                    android:layout_marginTop="@dimen/size17"
                    android:dividerHeight="@dimen/size0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.ccpress.izijia.yd.view.MaxListView>
            <TextView
                    android:id="@+id/tv_comment_star"
                    android:text="评星："
                    android:padding="@dimen/size3"
                    android:layout_below="@id/lv_comment"
                    android:layout_marginLeft="@dimen/size2"
                    android:layout_marginTop="@dimen/size10"
                    android:textColor="@color/dfy_333"
                    android:gravity="center"
                    android:textSize="@dimen/size12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <com.ccpress.izijia.yd.view.StarImageView
                    android:id="@+id/fg_comment_star"
                    android:background="@drawable/yd_star_1"
                    android:layout_toRightOf="@id/tv_comment_star"
                    android:layout_marginTop="@dimen/size11"
                    android:layout_below="@id/lv_comment"
                    android:layout_marginLeft="@dimen/size8"
                    android:layout_width="@dimen/size90"
                    android:layout_height="@dimen/size18"/>


            <EditText
                    android:id="@+id/et_content"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginLeft="@dimen/size6"
                    android:gravity="left"
                    android:layout_below="@id/tv_comment_star"
                    android:background="@drawable/dfy_ping_text_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size80"/>
                <RelativeLayout
                        android:id="@+id/rl_anonymous"
                        android:layout_below="@id/et_content"
                        android:layout_marginRight="@dimen/size5"
                        android:layout_marginTop="@dimen/size10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/iv_icon"
                                android:layout_marginLeft="@dimen/size10"
                                android:src="@drawable/yd_anonymous_select"
                                android:layout_width="@dimen/size15"
                                android:layout_height="@dimen/size15"/>
                        <TextView
                                android:id="@+id/tv_anonymous"
                                android:textSize="@dimen/sp12"
                                android:textColor="#333"
                                android:text="匿名评价"
                                android:layout_marginLeft="@dimen/size7"
                                android:layout_toRightOf="@id/iv_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                </RelativeLayout>

        </RelativeLayout>
            <Button
                    android:id="@+id/bt_comment"
                    android:text="提交评论"
                    android:layout_marginTop="@dimen/size14"
                    android:layout_marginRight="@dimen/size6"
                    android:layout_marginBottom="@dimen/size15"
                    android:textColor="@color/yd_fefefe"
                    android:textSize="@dimen/sp15"
                    android:background="@drawable/yd_selector_50bbbb"
                    android:layout_width="@dimen/size81"
                    android:layout_height="@dimen/size27"
                    android:layout_gravity="right"/>
    </LinearLayout>
</ScrollView>
