<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/yd_fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size12"
        >
    <LinearLayout
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_title"
                android:text="入住日期："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/yd_333"
                android:textSize="@dimen/sp13"/>
        <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_marginLeft="@dimen/size3"
                android:layout_width="@dimen/size113"
                android:layout_height="@dimen/size25">

            <TextView
                    android:id="@+id/tv_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size5"
                    android:textColor="@color/yd_333"
                    android:textSize="@dimen/sp12"/>

            <ImageView
                    android:id="@+id/iv_calen_1"
                    android:layout_width="@dimen/size28"
                    android:layout_height="@dimen/size25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yd_icon_calen"/>
        </RelativeLayout>
    </LinearLayout>
    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size3"
            android:background="@color/yd_e4e4e4"/>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_title_2"
                android:text="离开日期："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/yd_333"
                android:textSize="@dimen/sp13"/>
        <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_toRightOf="@id/tv_title_2"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/size3"
                android:layout_width="@dimen/size113"
                android:layout_height="@dimen/size25">

            <TextView
                    android:id="@+id/tv_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size5"
                    android:textColor="@color/yd_333"
                    android:textSize="@dimen/sp12"/>

            <ImageView
                    android:id="@+id/iv_calen_2"
                    android:layout_width="@dimen/size28"
                    android:layout_height="@dimen/size25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yd_icon_calen"/>
        </RelativeLayout>
            <Button
                    android:id="@+id/bt_filter"
                    android:text="筛选"
                    android:layout_marginRight="@dimen/size5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dfy_50bbdb"
                    android:textSize="@dimen/sp12"
                    android:background="@drawable/fans_btn_bg"
                    android:layout_width="@dimen/size45"
                    android:layout_height="@dimen/size17"/>
    </RelativeLayout>

</LinearLayout>